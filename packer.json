{
    "variables": {
	"docker-registry": "dr.rbkmoney.com",
	"base-tag": null,
	"base-dir": "{{env `PWD`}}",
	"files-dir": "{{env `PWD`}}/files/",
	"shared-dir": "{{env `HOME`}}/.cache/rbkmoney/images/shared/",
	"image-tag": null
    },
    "builders": [
	{
	    "type": "docker",
	    "image": "ceph/demo:{{user `base-tag`}}",
	    "volumes": {
		"{{user `files-dir`}}": "/tmp/data:ro"
	    },
	    "commit": "true"
	}
    ],
    "provisioners": [
	{
	    "type": "shell",
	    "script": "{{user `files-dir`}}/packer.sh"
	}
    ],
    "post-processors": [
	{
	    "type": "docker-tag",
	    "repository": "{{user `docker-registry`}}/rbkmoney/ceph",
	    "tag": "{{user `image-tag`}}"
	}
    ]
}
